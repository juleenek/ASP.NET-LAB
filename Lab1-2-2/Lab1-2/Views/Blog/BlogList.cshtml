@model IList<Lab1_2.Models.BlogItem>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h1>Lista wpisów</h1>

<table class="table">

    @foreach (var item in @Model)
    {
    <tr>
        <td>@item.Title</td>
        <td>@item.Content</td>
        <td>@item.CreationTimstamp</td>
        <td>
            <a asp-controller="Blog"
               asp-action="Edit"
               asp-route-id="@item.Id"
               class="btn btn-primary">Edytuj</a>
            <a asp-controller="Blog"
               asp-action="Delete"
               asp-route-id="@item.Id"
               class="btn btn-danger">Usuń</a>
            <a asp-controller="Blog"
               asp-action="Details"
               asp-route-id="@item.Id"
               class="btn btn-primary">Szczegóły</a>
        </td>
    </tr>
    }

</table>
