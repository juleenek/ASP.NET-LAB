@{
}
<div>
    <form asp-action="Login" asp-controller="Account">
        <div class="mb-3">
            <span asp-validation-for="Name"></span>
            <label asp-for="Name">Nazwa użytkownika: </label>
            <input asp-for="Name" />
        </div>
        <div class="mb-3">
            <label asp-for="Password">Hasło: </label>
            <input asp-for="Password" />
        </div>
        <div>
            <input type="hidden" asp-for="ReturnUrl" value=@Model.ReturnUrl />
        </div>
        <div>
            <button class="btn btn-primary" type="submit" asp-action="Login">Loguj</button>
        </div>
    </form>
</div>